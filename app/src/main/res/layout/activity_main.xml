<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/sv"
        android:layout_marginStart="265dp"
        android:layout_marginTop="415dp"/>

    <GridLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="4"
        android:columnCount="2"
        android:orientation="vertical"
        android:id="@+id/mainLayout">

        <TextView
            android:layout_columnWeight="1"
            android:layout_rowWeight="0.3"
            android:text="@string/mainText"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"/>
        <TextView
            android:id="@+id/tv"
            android:layout_columnWeight="1"
            android:layout_rowWeight="0.2"
            android:text="@string/not_started"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_margin="8dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"/>
        <ImageView android:id="@+id/camera"
            android:layout_columnWeight="1"
            android:layout_rowWeight="0.4"
            android:src="@drawable/camera"
            android:layout_marginStart="80dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center_vertical"/>
        <ImageView android:id="@+id/finger"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/finger"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="start|center_vertical"/>
        <Button
            android:layout_columnWeight="1"
            android:layout_rowWeight="0.1"
            android:id="@+id/startButton"
            android:text="@string/start"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="bottom|center"/>

    </GridLayout>

</RelativeLayout>
